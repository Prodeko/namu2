{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useHookAtTopLevel": "warn"
      },
      "nursery": {
        "noUnusedImports": "warn"
      },
      "suspicious": {
        "noConsoleLog": "warn"
      }
    },
    "ignore": ["node_modules/**/*", ".next/**/*", ".pnpm-store/**/*"]
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": false
  }
}
