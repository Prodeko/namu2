{
  "name": "Namu",
  "dockerComposeFile": ["./docker-compose.devcontainer.yml"],
  "service": "next",
  "workspaceFolder": "/namu",
  "customizations": {
    "vscode": {
      "extensions": [
        "Prisma.prisma",
        "biomejs.biome",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "postAttachCommand": "git config --global --add safe.directory ${containerWorkspaceFolder}"
}
